{
  "name": "@johanblumenberg/wsrun",
  "version": "1.0.6",
  "description": "executes commands on packages in parallel, but is aware of the dependencies between them",
  "main": "./build/index.js",
  "author": "hfour",
  "license": "MIT",
  "jest": {
    "verbose": false,
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp",
      "<rootDir>/node_modules/",
      "\\.util\\.ts$"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.ts",
      "<rootDir>/src/**/*.spec.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/tmp"
    ]
  },
  "bin": {
    "wsrun": "./bin/wsrun.js"
  },
  "files": [
    "bin/*",
    "build/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^21.1.6",
    "@types/lodash": "^4.14.85",
    "@types/minimatch": "^3.0.3",
    "@types/mkdirp": "^0.5.2",
    "@types/mz": "^0.0.32",
    "@types/node": "^18",
    "@types/split": "^0.3.28",
    "@types/strip-ansi": "^5.2.1",
    "@types/yargs": "^11.1.3",
    "jest": "^29.0.0",
    "mkdirp": "^0.5.1",
    "mz": "^2.7.0",
    "prettier": "^1.19.1",
    "rimraf": "^5.0.10",
    "strip-ansi": "^5.0.0",
    "ts-jest": "^29.0.0",
    "ts-mockito": "^2.5.0",
    "typescript": "^4"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "yarn build && yarn test:prettier && jest",
    "test:prettier": "prettier -c '**/*.ts' '**/*.json'",
    "test:watch": "jest --watch",
    "prepublish": "tsc"
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "glob": "^10",
    "jest-changed-files": "^30.0.2",
    "lodash": "^4.17.21",
    "minimatch": "^9.0.0",
    "split": "^1.0.1",
    "throat": "^4.1.0",
    "yargs": "^16.2.0"
  }
}
